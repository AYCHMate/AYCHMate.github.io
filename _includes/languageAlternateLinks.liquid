{% if page.singleLanguage != true %}
  {% for currentLanguage in site.languages %}
    {% if currentLanguage.name != language.name %}
      <link rel="alternate" hreflang="{{ currentLanguage.name }}" href="{%unless currentLanguage.default%}/{{currentLanguage.name}}{%endunless%}{{ pageUrlWithoutLanguagePrefix }}" />
    {% endif %}
  {% endfor %}
{% endif %}
