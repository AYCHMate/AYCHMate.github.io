{% if page.singleLanguage != true %}
  {% for currentLanguage in site.languages %}
    {% if currentLanguage.name != language.name %}
      {% assign urlLanguage = currentLanguage %}
      {% include determineCurrentPageInUrlLanguage.liquid %}
      <link rel="alternate" hreflang="{{ currentLanguage.name }}" href="{{ currentPageUrlInUrlLanguage }}" />
    {% endif %}
  {% endfor %}
{% endif %}
